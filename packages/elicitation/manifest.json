{
  "manifest_version": "0.3",
  "name": "elicitation",
  "display_name": "Elicitation MCP",
  "version": "0.1.1",
  "description": "User input elicitation for AI agents via structured questions",
  "icon": "icon.png",
  "license": "Apache-2.0",
  "author": {
    "name": "Stephen Akinyemi"
  },
  "server": {
    "type": "binary",
    "entry_point": "dist/elicitation-linux-x86_64",
    "mcp_config": {
      "command": "${__dirname}/dist/elicitation-linux-x86_64",
      "args": [],
      "env": {},
      "platform_overrides": {
        "darwin": { "command": "${__dirname}/dist/elicitation-darwin-arm64" },
        "linux": { "command": "${__dirname}/dist/elicitation-linux-x86_64" }
      }
    }
  },
  "tools": [
    {
      "name": "elicitation__clarify",
      "description": "Ask the user clarifying questions with predefined options"
    }
  ],
  "compatibility": {
    "platforms": ["darwin", "linux"]
  },
  "_meta": {
    "store.tool.mcpb": {
      "scripts": {
        "build": "cargo build --release"
      },
      "mcp_config": {
        "platform_overrides": {
          "darwin-arm64": { "command": "${__dirname}/dist/elicitation-darwin-arm64" },
          "linux-arm64": { "command": "${__dirname}/dist/elicitation-linux-arm64" },
          "linux-x86_64": { "command": "${__dirname}/dist/elicitation-linux-x86_64" }
        }
      },
      "compatibility": {
        "platforms": ["darwin-arm64", "linux-arm64", "linux-x86_64"]
      },
      "static_responses": {
        "tools/list": {
          "tools": [
            {
              "name": "elicitation__clarify",
              "description": "Ask the user clarifying questions with predefined options",
              "input_schema": {
                "type": "object",
                "properties": {
                  "questions": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 4,
                    "description": "Questions to ask the user (1-4 questions)",
                    "items": {
                      "type": "object",
                      "properties": {
                        "question": {
                          "type": "string",
                          "minLength": 1,
                          "description": "The complete question to ask the user"
                        },
                        "header": {
                          "type": "string",
                          "minLength": 1,
                          "maxLength": 12,
                          "description": "Short label displayed as a tag (max 12 characters)"
                        },
                        "multiSelect": {
                          "type": "boolean",
                          "description": "Whether multiple options can be selected"
                        },
                        "options": {
                          "type": "array",
                          "minItems": 2,
                          "maxItems": 4,
                          "description": "Available choices (2-4 options). An 'Other' option is auto-added.",
                          "items": {
                            "type": "object",
                            "properties": {
                              "label": {
                                "type": "string",
                                "minLength": 1,
                                "description": "Display text for this option (1-5 words)"
                              },
                              "description": {
                                "type": "string",
                                "minLength": 1,
                                "description": "Explanation of what this option means or implies"
                              }
                            },
                            "required": ["label", "description"]
                          }
                        }
                      },
                      "required": ["question", "header", "multiSelect", "options"]
                    }
                  }
                },
                "required": ["questions"]
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "answers": {
                    "type": "object",
                    "description": "User's answers keyed by question index (as string). Value is a string for single-select or array of strings for multi-select.",
                    "additionalProperties": {
                      "oneOf": [
                        { "type": "string" },
                        { "type": "array", "items": { "type": "string" } }
                      ]
                    }
                  },
                  "cancelled": {
                    "type": "boolean",
                    "description": "Whether the user cancelled the elicitation"
                  }
                },
                "required": ["answers", "cancelled"]
              }
            }
          ]
        }
      }
    }
  }
}
