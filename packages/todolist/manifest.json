{
  "manifest_version": "0.3",
  "name": "todolist",
  "display_name": "Todolist MCP",
  "version": "0.1.1",
  "description": "Session-scoped task tracking for AI agents. Based on Claude Code's TodoWrite tool design.",
  "icon": "icon.png",
  "license": "Apache-2.0",
  "author": {
    "name": "Stephen Akinyemi"
  },
  "server": {
    "type": "binary",
    "entry_point": "dist/todolist-linux-x86_64",
    "mcp_config": {
      "command": "${__dirname}/dist/todolist-linux-x86_64",
      "args": [],
      "env": {},
      "platform_overrides": {
        "darwin": { "command": "${__dirname}/dist/todolist-darwin-arm64" },
        "linux": { "command": "${__dirname}/dist/todolist-linux-x86_64" }
      }
    }
  },
  "tools": [
    {
      "name": "todolist__get",
      "description": "Get the current state of the todo list"
    },
    {
      "name": "todolist__set",
      "description": "Replace the entire todo list"
    }
  ],
  "compatibility": {
    "platforms": ["darwin", "linux"]
  },
  "_meta": {
    "store.tool.mcpb": {
      "scripts": {
        "build": "cargo build --release"
      },
      "mcp_config": {
        "platform_overrides": {
          "darwin-arm64": { "command": "${__dirname}/dist/todolist-darwin-arm64" },
          "linux-arm64": { "command": "${__dirname}/dist/todolist-linux-arm64" },
          "linux-x86_64": { "command": "${__dirname}/dist/todolist-linux-x86_64" }
        }
      },
      "compatibility": {
        "platforms": ["darwin-arm64", "linux-arm64", "linux-x86_64"]
      },
      "static_responses": {
        "tools/list": {
          "tools": [
            {
              "name": "todolist__get",
              "description": "Get the current state of the todo list",
              "input_schema": {
                "type": "object",
                "properties": {},
                "required": []
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "todos": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "content": {
                          "type": "string",
                          "description": "Task description in imperative form (e.g., \"Fix authentication bug\")"
                        },
                        "status": {
                          "type": "string",
                          "enum": ["pending", "in_progress", "completed"],
                          "description": "Current status of the task"
                        },
                        "activeForm": {
                          "type": "string",
                          "description": "Task description in present continuous form (e.g., \"Fixing authentication bug\")"
                        }
                      },
                      "required": ["content", "status", "activeForm"]
                    },
                    "description": "The current list of todos"
                  },
                  "summary": {
                    "type": "object",
                    "properties": {
                      "total": { "type": "integer", "description": "Total number of items in the list" },
                      "pending": { "type": "integer", "description": "Number of pending items" },
                      "in_progress": { "type": "integer", "description": "Number of in-progress items" },
                      "completed": { "type": "integer", "description": "Number of completed items" }
                    },
                    "required": ["total", "pending", "in_progress", "completed"],
                    "description": "Summary of todo statuses"
                  }
                },
                "required": ["todos", "summary"]
              }
            },
            {
              "name": "todolist__set",
              "description": "Replace the entire todo list",
              "input_schema": {
                "type": "object",
                "properties": {
                  "todos": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "content": {
                          "type": "string",
                          "description": "Task description in imperative form (e.g., \"Fix authentication bug\")"
                        },
                        "status": {
                          "type": "string",
                          "enum": ["pending", "in_progress", "completed"],
                          "description": "Current status of the task"
                        },
                        "activeForm": {
                          "type": "string",
                          "description": "Task description in present continuous form (e.g., \"Fixing authentication bug\")"
                        }
                      },
                      "required": ["content", "status", "activeForm"]
                    },
                    "description": "The complete list of todos to set"
                  }
                },
                "required": ["todos"]
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "summary": {
                    "type": "object",
                    "properties": {
                      "total": { "type": "integer", "description": "Total number of items in the list" },
                      "pending": { "type": "integer", "description": "Number of pending items" },
                      "in_progress": { "type": "integer", "description": "Number of in-progress items" },
                      "completed": { "type": "integer", "description": "Number of completed items" }
                    },
                    "required": ["total", "pending", "in_progress", "completed"],
                    "description": "Summary of todo statuses after the update"
                  }
                },
                "required": ["summary"]
              }
            }
          ]
        }
      }
    }
  }
}
