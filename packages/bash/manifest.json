{
  "manifest_version": "0.3",
  "name": "bash",
  "display_name": "Bash MCP",
  "version": "0.1.1",
  "description": "Shell command execution for AI agents. Based on Claude Code's Bash tool design.",
  "icon": "icon.png",
  "license": "Apache-2.0",
  "author": {
    "name": "Stephen Akinyemi"
  },
  "server": {
    "type": "binary",
    "entry_point": "dist/bash-linux-x86_64",
    "mcp_config": {
      "command": "${__dirname}/dist/bash-linux-x86_64",
      "args": [],
      "env": {},
      "platform_overrides": {
        "darwin": { "command": "${__dirname}/dist/bash-darwin-arm64" },
        "linux": { "command": "${__dirname}/dist/bash-linux-x86_64" }
      }
    }
  },
  "tools": [
    {
      "name": "bash__exec",
      "description": "Execute a shell command and return its output"
    }
  ],
  "compatibility": {
    "platforms": ["darwin", "linux"]
  },
  "_meta": {
    "store.tool.mcpb": {
      "scripts": {
        "build": "cargo build --release"
      },
      "mcp_config": {
        "platform_overrides": {
          "darwin-arm64": { "command": "${__dirname}/dist/bash-darwin-arm64" },
          "linux-arm64": { "command": "${__dirname}/dist/bash-linux-arm64" },
          "linux-x86_64": { "command": "${__dirname}/dist/bash-linux-x86_64" }
        }
      },
      "compatibility": {
        "platforms": ["darwin-arm64", "linux-arm64", "linux-x86_64"]
      },
      "static_responses": {
        "tools/list": {
          "tools": [
            {
              "name": "bash__exec",
              "description": "Execute a shell command and return its output",
              "input_schema": {
                "type": "object",
                "properties": {
                  "command": {
                    "type": "string",
                    "description": "The shell command to execute."
                  },
                  "description": {
                    "type": "string",
                    "description": "Short description (5-10 words) of what the command does."
                  },
                  "timeout_ms": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 600000,
                    "description": "Timeout in milliseconds. Default: 120000, Max: 600000."
                  },
                  "working_directory": {
                    "type": "string",
                    "description": "Working directory for command execution."
                  }
                },
                "required": ["command"]
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "stdout": {
                    "type": "string",
                    "description": "Standard output from the command."
                  },
                  "stderr": {
                    "type": "string",
                    "description": "Standard error from the command."
                  },
                  "exit_code": {
                    "type": "integer",
                    "description": "Exit code of the command (0 = success)."
                  },
                  "stdout_truncated": {
                    "type": "boolean",
                    "description": "Whether stdout was truncated due to size limits."
                  },
                  "stderr_truncated": {
                    "type": "boolean",
                    "description": "Whether stderr was truncated due to size limits."
                  },
                  "duration_ms": {
                    "type": "integer",
                    "description": "Actual execution duration in milliseconds."
                  }
                },
                "required": [
                  "stdout",
                  "stderr",
                  "exit_code",
                  "stdout_truncated",
                  "stderr_truncated",
                  "duration_ms"
                ]
              }
            }
          ]
        }
      }
    }
  }
}
