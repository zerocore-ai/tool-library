{
  "runners": {
    "darwin-x86_64": "macos-15-intel",
    "darwin-arm64": "macos-15",
    "linux-x86_64": "ubuntu-24.04",
    "linux-arm64": "ubuntu-24.04-arm",
    "win32-x86_64": "windows-2022",
    "win32-arm64": "windows-11-arm",
    "universal": "ubuntu-24.04"
  },
  "vendors": {
    "monday": {
      "targets": [
        "darwin-x86_64",
        "darwin-arm64",
        "linux-x86_64",
        "linux-arm64",
        "win32-x86_64",
        "win32-arm64"
      ],
      "needs_dist": true,
      "npm_ci_args": "--omit=dev --no-audit --no-fund"
    },
    "mongodb": {
      "targets": [
        "darwin-x86_64",
        "darwin-arm64",
        "linux-x86_64",
        "linux-arm64",
        "win32-x86_64",
        "win32-arm64"
      ],
      "needs_dist": true,
      "npm_ci_args": "--omit=dev --omit=optional --no-audit --no-fund"
    },
    "elastic": {
      "targets": ["universal"],
      "needs_dist": false
    },
    "atlassian": {
      "targets": ["universal"],
      "needs_dist": false
    }
  }
}
